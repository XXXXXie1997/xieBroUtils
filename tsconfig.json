{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./types",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts"], // 确保包含所有 TypeScript 文件
  "exclude": ["node_modules", "dist"]
}
